{% extends "base.twig" %}

{% block title %}Tickets - TicketApp{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow">
        <div class="container py-6">
            <div class="flex justify-between items-center">
                <h1 class="text-xl font-bold text-gray-900">TicketApp</h1>
                <nav class="flex space-x-4">
                    <a href="/app" class="nav-link">Dashboard</a>
                    <a href="/app/tickets" class="nav-link active">Tickets</a>
                    <a href="/auth/logout" class="nav-link">Logout</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container py-6">
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <!-- Header -->
        <div class="sm:flex sm:items-center sm:justify-between mb-8">
            <div>
                <h1 class="text-2xl font-semibold text-gray-900">Tickets</h1>
                <p class="mt-2 text-sm text-gray-700">
                    Manage and track all your support tickets in one place.
                </p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="/app/tickets/create" class="btn btn-primary">
                    ‚ûï New Ticket
                </a>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white shadow rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
                <form method="GET" action="/app/tickets" class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <!-- Search -->
                    <div>
                        <label for="search" class="label">Search tickets</label>
                        <input
                            id="search"
                            name="search"
                            type="text"
                            class="input"
                            placeholder="Search by title or description"
                            value="{{ search }}"
                        />
                    </div>

                    <!-- Status Filter -->
                    <div>
                        <label for="status" class="label">Status</label>
                        <select id="status" name="status" class="input">
                            <option value="all" {% if status_filter == 'all' %}selected{% endif %}>All Status</option>
                            <option value="open" {% if status_filter == 'open' %}selected{% endif %}>Open</option>
                            <option value="in_progress" {% if status_filter == 'in_progress' %}selected{% endif %}>In Progress</option>
                            <option value="closed" {% if status_filter == 'closed' %}selected{% endif %}>Closed</option>
                        </select>
                    </div>

                    <!-- Priority Filter -->
                    <div>
                        <label for="priority" class="label">Priority</label>
                        <select id="priority" name="priority" class="input">
                            <option value="all" {% if priority_filter == 'all' %}selected{% endif %}>All Priority</option>
                            <option value="high" {% if priority_filter == 'high' %}selected{% endif %}>High</option>
                            <option value="medium" {% if priority_filter == 'medium' %}selected{% endif %}>Medium</option>
                            <option value="low" {% if priority_filter == 'low' %}selected{% endif %}>Low</option>
                        </select>
                    </div>

                    <div class="sm:col-span-3">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a href="/app/tickets" class="btn btn-secondary ml-2">Clear</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tickets List -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            {% if tickets %}
                <ul class="divide-y divide-gray-200">
                    {% for ticket in tickets %}
                    <li>
                        <div class="px-4 py-4 sm:px-6">
                            <div class="flex items-center justify-between">
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center justify-between">
                                        <p class="text-sm font-medium text-primary-600 truncate">
                                            #{{ ticket.id }} - {{ ticket.title }}
                                        </p>
                                        <div class="ml-2 flex-shrink-0 flex space-x-2">
                                            <span class="badge badge-{{ ticket.priority }}">{{ ticket.priority }}</span>
                                            <span class="badge badge-{{ ticket.status }}">{{ ticket.status|replace({'_': ' '}) }}</span>
                                        </div>
                                    </div>
                                    <p class="mt-2 text-sm text-gray-500">
                                        {{ ticket.description|slice(0, 150) }}{% if ticket.description|length > 150 %}...{% endif %}
                                    </p>
                                    <div class="mt-2 flex items-center text-sm text-gray-500">
                                        <p>
                                            Created {{ ticket.created_at|date('M j, Y g:i A') }} ‚Ä¢ Assigned to {{ ticket.assignee }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 flex justify-end space-x-2">
                                <button type="button" class="btn-sm border border-gray-300 text-gray-700 bg-white hover:bg-gray-50">
                                    üëÅÔ∏è View
                                </button>
                                <a href="/app/tickets/{{ ticket.id }}/edit" class="btn-sm border border-gray-300 text-gray-700 bg-white hover:bg-gray-50">
                                    ‚úèÔ∏è Edit
                                </a>
                                <a href="/app/tickets/{{ ticket.id }}/delete" 
                                   class="btn-sm border border-red-300 text-red-700 bg-white hover:bg-red-50"
                                   data-confirm="Are you sure you want to delete this ticket?">
                                    üóëÔ∏è Delete
                                </a>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            {% else %}
                <!-- Empty State -->
                <div class="px-6 py-12 text-center">
                    <div class="text-gray-500">
                        <div class="text-6xl mb-4">üìã</div>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No tickets found</h3>
                        <p class="mt-1 text-sm text-gray-500">
                            {% if search or status_filter != 'all' or priority_filter != 'all' %}
                                Try adjusting your search or filter criteria.
                            {% else %}
                                Get started by creating a new ticket.
                            {% endif %}
                        </p>
                        {% if not search and status_filter == 'all' and priority_filter == 'all' %}
                        <div class="mt-6">
                            <a href="/app/tickets/create" class="btn btn-primary">
                                ‚ûï New Ticket
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </main>
</div>

<style>
.btn-sm {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 0.375rem;
    text-decoration: none;
}
</style>
{% endblock %}
