{% extends "base.twig" %}

{% block title %}Sign Up - TicketApp{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            <a href="/" class="text-primary-600 hover:text-primary-700">TicketApp</a>
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Manage your support tickets with ease
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <div>
                <h2 class="mt-6 text-3xl font-extrabold text-gray-900">Create your account</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Or
                    <a href="/auth/login" class="btn-outline ml-2">
                        sign in to your existing account
                    </a>
                </p>
            </div>

            {% if message %}
                <div class="mt-4 p-4 rounded-md bg-red-50 border border-red-200">
                    <p class="text-sm font-medium text-red-800">{{ message }}</p>
                </div>
            {% endif %}

            <form class="mt-8 space-y-6" method="POST" action="/auth/signup">
                <div>
                    <label for="name" class="label">
                        Full name
                    </label>
                    <input
                        id="name"
                        name="name"
                        type="text"
                        autocomplete="name"
                        required
                        class="input {% if errors.name %}border-red-300{% endif %}"
                        placeholder="Enter your full name"
                        value="{{ app.request.request.get('name') }}"
                    />
                    {% if errors.name %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.name }}</p>
                    {% endif %}
                </div>

                <div>
                    <label for="email" class="label">
                        Email address
                    </label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        autocomplete="email"
                        required
                        class="input {% if errors.email %}border-red-300{% endif %}"
                        placeholder="Enter your email"
                        value="{{ app.request.request.get('email') }}"
                    />
                    {% if errors.email %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <div>
                    <label for="password" class="label">
                        Password
                    </label>
                    <div class="relative">
                        <input
                            id="password"
                            name="password"
                            type="password"
                            autocomplete="new-password"
                            required
                            class="input pr-10 {% if errors.password %}border-red-300{% endif %}"
                            placeholder="Create a password"
                        />
                        <button
                            type="button"
                            class="absolute inset-y-0 right-0 pr-3 flex items-center"
                            data-toggle-password
                            data-target="#password"
                        >
                            üëÅÔ∏è
                        </button>
                    </div>
                    {% if errors.password %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                    {% endif %}
                </div>

                <div>
                    <label for="confirm_password" class="label">
                        Confirm password
                    </label>
                    <div class="relative">
                        <input
                            id="confirm_password"
                            name="confirm_password"
                            type="password"
                            autocomplete="new-password"
                            required
                            class="input pr-10 {% if errors.confirm_password %}border-red-300{% endif %}"
                            placeholder="Confirm your password"
                        />
                        <button
                            type="button"
                            class="absolute inset-y-0 right-0 pr-3 flex items-center"
                            data-toggle-password
                            data-target="#confirm_password"
                        >
                            üëÅÔ∏è
                        </button>
                    </div>
                    {% if errors.confirm_password %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.confirm_password }}</p>
                    {% endif %}
                </div>

                <div class="flex items-center">
                    <input
                        id="agree-terms"
                        name="agree-terms"
                        type="checkbox"
                        required
                        class="h-4 w-4 text-primary-600 border-gray-300 rounded"
                    />
                    <label for="agree-terms" class="ml-2 block text-sm text-gray-900">
                        I agree to the
                        <a href="#" class="text-primary-600 hover:text-primary-500">Terms of Service</a>
                        and
                        <a href="#" class="text-primary-600 hover:text-primary-500">Privacy Policy</a>
                    </label>
                </div>

                <div>
                    <button
                        type="submit"
                        class="btn btn-primary w-full"
                    >
                        Create account
                    </button>
                </div>
            </form>
        </div>
        
        <div class="mt-6 text-center text-sm">
            <a href="/" class="font-medium text-primary-600 hover:text-primary-500">
                ‚Üê Back to home
            </a>
        </div>
    </div>
</div>
{% endblock %}
