{% extends "base.twig" %}

{% block title %}Sign In - TicketApp{% endblock %}

{% block content %}
<div class="min-h-screen relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-800">
        <div class="absolute top-0 left-0 w-full h-full opacity-20">
            <div class="animate-float absolute top-20 left-10 w-32 h-32 bg-white rounded-full blur-xl"></div>
            <div class="animate-float absolute top-40 right-20 w-24 h-24 bg-pink-300 rounded-full blur-lg" style="animation-delay: 1s"></div>
            <div class="animate-float absolute bottom-20 left-1/4 w-40 h-40 bg-blue-300 rounded-full blur-2xl" style="animation-delay: 2s"></div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="relative z-50 px-6 py-4">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <div class="text-2xl font-bold text-white">
                <a href="/" class="hover:text-purple-200 transition-colors">TicketFlow</a>
            </div>
            <div class="space-x-4">
                <a href="/auth/signup" class="btn-ghost">
                    Sign Up
                </a>
            </div>
        </div>
    </nav>

    <!-- Login Form -->
    <div class="relative z-10 min-h-screen flex items-center justify-center px-6 py-20">
        <div class="max-w-lg w-full">
            <div class="card p-8 animate-fadeIn">
                <div class="text-center mb-8">
                    <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Welcome Back</h2>
                    <p class="text-gray-600 mb-4">
                        Sign in to your TicketFlow account
                    </p>
                    <p class="text-sm text-gray-500">
                        Don't have an account?
                        <a href="/auth/signup" class="btn-outline ml-2">
                            Create Account
                        </a>
                    </p>
                </div>

            {% if message %}
                <div class="mt-4 p-4 rounded-md bg-red-50 border border-red-200">
                    <p class="text-sm font-medium text-red-800">{{ message }}</p>
                </div>
            {% endif %}

                <form class="space-y-8" method="POST" action="/auth/login">
                    <div class="form-group">
                        <label for="email" class="form-label">
                            Email address
                        </label>
                        <input
                            id="email"
                            name="email"
                            type="email"
                            autocomplete="email"
                            required
                            class="form-input {% if errors.email %}border-red-300{% endif %}"
                            placeholder="Enter your email"
                            value="{{ app.request.request.get('email') }}"
                        />
                        {% if errors.email %}
                            <p class="mt-2 text-sm text-red-600">{{ errors.email }}</p>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">
                            Password
                        </label>
                        <div class="relative">
                            <input
                                id="password"
                                name="password"
                                type="password"
                                autocomplete="current-password"
                                required
                                class="form-input pr-10 {% if errors.password %}border-red-300{% endif %}"
                                placeholder="Enter your password"
                            />
                            <button
                                type="button"
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600"
                                data-toggle-password
                                data-target="#password"
                            >
                                üëÅÔ∏è
                            </button>
                        </div>
                        {% if errors.password %}
                            <p class="mt-2 text-sm text-red-600">{{ errors.password }}</p>
                        {% endif %}
                    </div>

                    <div class="flex items-center justify-between py-4">
                        <div class="flex items-center">
                            <input
                                id="remember-me"
                                name="remember-me"
                                type="checkbox"
                                class="h-4 w-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500"
                            />
                            <label for="remember-me" class="ml-3 block text-sm text-gray-700">
                                Remember me
                            </label>
                        </div>

                        <div class="text-sm">
                            <a href="#" class="btn-link text-sm">
                                Forgot password?
                            </a>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button
                            type="submit"
                            class="btn btn-primary w-full text-lg py-4"
                        >
                            Sign In
                        </button>
                    </div>

                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="text-center">
                            <p class="text-sm text-gray-600 mb-4">Demo credentials for testing:</p>
                            <div class="bg-gray-50 p-4 rounded-lg text-sm text-gray-700">
                                <p class="mb-2"><strong>Email:</strong> demo@example.com</p>
                                <p><strong>Password:</strong> password123</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="mt-8 text-center">
                <a href="/" class="btn-ghost text-white">
                    ‚Üê Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
